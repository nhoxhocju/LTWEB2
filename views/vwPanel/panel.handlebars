<div class="container">
    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{success}}
    </div>
    {{/if}}
    <div class="row">
        <div class="col-sm-9">
            <div class="card shadow mt-5 mb-5">
                <div class="card-header">
                    <div class="panel text-center font-weight-bold">DANH SÁCH BÀI VIẾT CỦA BẠN</div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">ID</th>
                            <th scope="col">Tiêu đề bài viết</th>
                            <th scope="col" class="text-right">
                                <a class="btn btn-outline-success btn-sm" href="/panel/insert" role="button"
                                    title="Thêm bài viết">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    Thêm
                                </a>
            </div>
            </th>
            </tr>
            </thead>
            <tbody>
                {{#each panel}}
                <tr>
                    <th class="text-center" scope="row">{{id}}</th>
                    <td><a href="/single_post/{{id}}">{{title}}</a></td>
                    <td class="text-right">
                        <a class="btn btn-primary btn-sm" href="/panel/update/{{id}}" role="button" title="Sửa">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-danger btn-sm" href="/panel/delete/{{id}}" role="button" title="Xóa">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card shadow mt-5 mb-5">
            <div class="card-header text-center font-weight-bold">
                QUẢN TRỊ BÀI VIẾT
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center"><a href="/panel"><i class="fa fa-file-text"
                            aria-hidden="true"></i> Trang bài viết</a></li>
                <li class="list-group-item text-center"><a class="" href="/panel/insert"><i class="fa fa-plus"
                            aria-hidden="true"></i>
                        Thêm bài viết</a></li>
            </ul>
        </div>
    </div>
</div>
</div>