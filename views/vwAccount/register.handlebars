{{#section 'js'}}



<script>
    $(function () {
        
        $('#registerForm').validate({
            rules: {
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true,
                    minlength: 6
                },
                confirmPassword: {
                    required: true,
                    equalTo: $('[name="password"]')
                },
                name: {
                    required: true
                },
                birthday: {
                    required: true
                },
            },
            messages: {
                email: {
                    required: 'Bạn vui lòng nhập email.',
                    email: 'Bạn vui lòng nhập đúng định dạng email.'
                },
                password: {
                    required: 'Bạn vui lòng nhập password.',
                    minlength: 'Mật khẩu phải có ít nhất 6 kí tự.'
                },
                confirmPassword: {
                    required: 'Bạn vui lòng nhập passowrd.',
                    equalTo: 'Vui lòng nhập mật khẩu giống nhau.'
                },
                name: {
                    required: 'Bạn vui lòng nhập tên.'
                },
                birthday: {
                    required: 'Bạn vui lòng nhập ngày sinh.',
                }
            },
            errorElement: 'small',
            errorClass: 'help-block text-danger',
            validClass: 'is-valid',
            highlight: function (e) {
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').addClass('is-valid');
            },
        });

    })
</script>
{{/section}}


<div class="container mb-5">
    <form novalidate action="" method="POST" id="registerForm">
        <div class="card shadow mt-5">
            <h5 class="card-header">
                Register
            </h5>
            <div class="card-body">
                <h5 class="mb-3">Account</h5>
                <div class="form-group">
                    <label for="">Email:</label>
                    <input required type="email" id="email" class="form-control" placeholder="" name="email">
                </div>
                <div class="form-group">
                    <label for="">Password:</label>
                    <input required type="password" id="password" class="form-control" placeholder="" name="password">
                </div>
                <div class="form-group">
                    <label for="">Confirm Password:</label>
                    <input required type="password" id="confirmPassword" class="form-control" placeholder=""
                        name="confirmPassword">
                </div>



                <hr class="mb-4">
                <h5 class="mb-3">Infomation</h5>
                <div class="form-group">
                    <label for="">Name:</label>
                    <input required type="text" id="name" class="form-control" placeholder="" name="name">
                </div>
                <div class="form-group">
                    <label for="">Date of birth:</label>
                    <input required type="date" id="birthday" class="form-control" placeholder="" name="birthday">

                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success btn-block">Register</button>
            </div>
        </div>
    </form>
</div>
